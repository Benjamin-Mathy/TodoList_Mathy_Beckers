<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ImageElementItem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="22dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"
            android:id="@+id/elementName"
            android:layout_weight="6.27" />

        <Button
            android:drawableTop="@drawable/ic_close_black_24dp"
            android:layout_height="match_parent"
            android:onClick="removeElement"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="25dp"
            android:background="@null"
            android:id="@+id/button"
            android:layout_weight="10.85"
            android:layout_width="120dp" />
    </LinearLayout>


    <ImageView
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_gravity="center"
        android:id="@+id/elementImage"/>

</LinearLayout>